<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_hasilkuiss"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/piala_bg"
    tools:context=".HasilKuis">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbarhasilkuis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark">
        </android.support.v7.widget.Toolbar>

        <TextView
            android:id="@+id/hasil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hasil Jawaban"
            android:textSize="15sp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:textColor="#000000"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nilai"
            android:text="100"
            android:textSize="60sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginLeft="20dp"/>
        <Button
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:onClick="ulangi"
            android:text="Ulangi Kuis"
            android:background="@drawable/roundedshapemenu1"
            android:layout_marginTop="350dp"
            android:layout_marginLeft="25dp"/>
        <Button
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:onClick="menu"
            android:text="Menu Utama"
            android:background="@drawable/roundedshapemenu2"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="25dp"/>

    </LinearLayout>
</ScrollView>
